@model GreenBushIEP.Models.RegisterViewModel
@{
    ViewBag.Title = "Forgot Password?";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h5>If you don't know your Greenbush Backpack password, provide the email address associated with your account and we'll send you an email with your new password.</h5>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <label class="col-md-2 col-xs-11 control-label" for="Email" style="transform: translateY(30%);">Email Address</label>
        <div class="col-md-9 col-xs-11 input-group">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-9 col-xs-11" style="padding-left: 0;">
            <input type="submit" class="btn btn-default" value="Send My Password" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
