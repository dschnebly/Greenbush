		<p class=MsoNormal align=center style='text-align:center'>
			<span style='font-size:14.0pt;font-family:"Cambria",serif'>RE-EVALUATION NOT NEEDED</span>
		</p>

		<p class=MsoNormal align=center style='text-align:center'>
			<span style='font-size:14.0pt;font-family:"Cambria",serif'>AGREEMENT FORM</span>
		</p>

		<p class=MsoNormal align=center style='text-align:center;margin-bottom:15px;'>
			<span style='font-family:"Calibri",sans-serif'>USD # <u>@((schoolDistrict.Length) > 25 ? schoolDistrict : String.Format(schoolDistrict).PadRight(25 - String.Format(schoolDistrict).Length, ' ').Replace(" ", "\u00A0"))</u></span>
		</p>
		<table boder="0" cellpadding="3" cellspacing="5" width="600">
			<tr>
				<td style="text-decoration:underline">
					<span style='font-family:"Calibri",sans-serif;'>
						@((studentFormattedName.Length) > 45 ? studentFormattedName : String.Format(studentFormattedName).PadRight(45 - String.Format(studentFormattedName).Length, '_').Replace(" ", "\u00A0"))
					</span>
				</td>
				<td style="text-decoration:underline;font-family:'Calibri',sans-serif;">
					<textarea  data-val="107" style="width:150px;height:25px;">@(String.Format("{0:MM/dd/yyyy}", DateTime.Now))</textarea><span style="display:none;" class="input-value">@(String.Format("{0:MM/dd/yyyy}", DateTime.Now))</span>
				</td>
			</tr>
			<tr>
				<td>
					<span style='font-size:10.0pt;font-family:"Calibri",sans-serif'>Student Name</span>
				</td>
				<td>
					<span style='font-size:10.0pt;font-family:"Calibri",sans-serif'>Date</span>
				</td>
			</tr>
			<tr>
				<td colspan="2">
					<span style='font-size:10.0pt;font-family:"Calibri",sans-serif'>&nbsp;</span>
				</td>
			</tr>
			<tr>
				<td style="text-decoration:underline">
					<span style='font-family:"Calibri",sans-serif'>
						@((contactFormattedName.Length) > 45 ? contactFormattedName : String.Format(contactFormattedName).PadRight(45 - String.Format(contactFormattedName).Length, '_').Replace(" ", "\u00A0"))
					</span>

				</td>
				<td style="text-decoration:underline">
					<span style='font-family:"Calibri",sans-serif'>
						@if (string.IsNullOrEmpty(evalDate))
						{
							@(String.Format("").PadRight(45 - String.Format(todaysDate).Length, '_').Replace(" ", "\u00A0"))
						}
						else
						{
							@((evalDate.Length) > 45 ? evalDate : String.Format(evalDate).PadRight(45 - String.Format(evalDate).Length, '_').Replace(" ", "\u00A0"))
						}
					</span>
				</td>
			</tr>
			<tr>
