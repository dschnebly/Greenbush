@model GreenBushIEP.Models.tblIEPSocial

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span class="glyphicon glyphicon-remove-circle" style="font-size: 30px;"></span></button>
    <button type="button" class="tooltip-help" data-toggle="tooltip" data-placement="bottom" title="Follow the tooltips to learn how to user this form"><span class="glyphicon glyphicon-question-sign" style="font-size: 30px;"></span></button>
    <h4 class="modal-title" id="myModalLabel" style="font-size: 30px;"><i class="fa fa-smile-o" aria-hidden="true" style="font-size: smaller; "></i>&nbsp;Social-Emotional</h4>
</div>
<div class="modal-body">

    @using (Html.BeginForm("EditSocial", "ModuleSection", FormMethod.Post, new { }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IEPSocialID)

        <div class="funkyradio">
            <div class="funkyradio-success">
                <input type="checkbox" id="ModuleSocialNoConcern" name="ModuleSocialNoConcern" @(Model.NoConcerns ? "checked" : String.Empty) />
                <label for="ModuleSocialNoConcern" class="standard-font-size">No Concerns</label>
            </div>
            <div class="funkyradio-primary">
                <input type="checkbox" name="ModuleSocialProgressTowardGenEd" id="ModuleSocialProgressTowardGenEd" @(Model.ProgressTowardGenEd ? "checked" : String.Empty) />
                <label for="ModuleSocialProgressTowardGenEd" class="standard-font-size">Progressing with General Education Support</label>
            </div>
            <div class="funkyradio-primary">
                <input type="checkbox" name="ModuleSocialAreaOfNeed" id="ModuleSocialAreaOfNeed" @(Model.AreaOfNeed == true ? "checked" : String.Empty) />
                <label for="ModuleSocialAreaOfNeed" class="standard-font-size">Area of Need which Impacts Performance in General Education</label>
            </div>
            <div class="funkyradio-primary">
                <input type="checkbox" name="ModuleSocialMentalHealthDiagnosis" id="ModuleSocialMentalHealthDiagnosis" @(Model.MentalHealthDiagnosis ? "checked" : String.Empty) />
                <label for="ModuleSocialMentalHealthDiagnosis" class="standard-font-size">Mental Health Diagnosis</label>
            </div>
            <div class="funkyradio-primary">
                <input type="checkbox" name="ModuleSocialSignificantBehaviors" id="ModuleSocialSignificantBehaviors" @(Model.SignificantBehaviors ? "checked" : String.Empty) />
                <label for="ModuleSocialSignificantBehaviors" class="standard-font-size">Significant Behaviors</label>
            </div>
            <div class="funkyradio-primary">
                <input type="checkbox" name="ModuleSocialDeficit" id="ModuleSocialDeficit" @(Model.SocialDeficit == true ? "checked" : String.Empty) />
                <label for="ModuleSocialDeficit" class="standard-font-size">Social Skills Deficit</label>
            </div>
        </div>
        <fieldset class="form-group">
            <label  class="standard-font-size" style="padding: 25px 0 15px;">Does this student's behavior impede the learning of self or others?</label>
            <div class="form-check">
                <label class="radio-inline" style="font-size: 16px;">@Html.RadioButton("ModuleSocialBehaviorImepedeLearning", "yes", Model.BehaviorImepedeLearning)Yes</label><br />
                <label class="radio-inline" style="font-size: 16px;">@Html.RadioButton("ModuleSocialBehaviorImepedeLearning", "no", !Model.BehaviorImepedeLearning)No</label><br />
            </div>
        </fieldset>
        <fieldset class="form-group">
            <label  class="standard-font-size" style="padding: 25px 0 15px;">Does this student require a Behavior Intervention Plan?</label>
            <div class="form-check">
                <label class="radio-inline" style="font-size: 16px;">@Html.RadioButton("ModuleSocialBehaviorInterventionPlan", "yes", Model.BehaviorInterventionPlan)Yes</label><br />
                <label class="radio-inline" style="font-size: 16px;">@Html.RadioButton("ModuleSocialBehaviorInterventionPlan", "no", !Model.BehaviorInterventionPlan)No</label><br />
            </div>
        </fieldset>
        <fieldset class="form-group">
            <label  class="standard-font-size" style="padding: 25px 0 15px;">Present Levels of Academic Achievement and Functional Performance (PLAAFP)</label>
            <div class="form-check">
                <textarea class="form-control standard-font-size" name="ModuleSocialLevelOfPerformance" id="ModuleSocialLevelOfPerformance" rows="3"  placeholder="Describe strengths and concerns (include baseline data)">@(Model.LevelOfPerformance)</textarea>
            </div>
        </fieldset>
        <fieldset class="form-group">
            <label class="standard-font-size" style="padding: 25px 0 15px;">Area of Need which Impacts Performance</label>
            <div class="form-check">
                <textarea class="form-control standard-font-size" name="ModuleSocialAreaOfNeedDescription" id="ModuleSocialAreaOfNeedDescription" rows="3" >@(Model.AreaOfNeedDescription)</textarea>
            </div>
        </fieldset>
        <fieldset class="form-group">
            <label class="standard-font-size"  style="padding: 25px 0 15px; padding-bottom: 0; margin-bottom: 0;">This need will be met by</label>
            <div class="form-check">
                <div class="checkbox">
                    <label><input type="checkbox" name="MetByGoal" @(Model.NeedMetByGoal == true ? "checked" : String.Empty)><span class="cr"><i class="cr-icon glyphicon glyphicon-ok"></i></span>Goal</label><br />
                    <label><input type="checkbox" name="MetByAccommodation" @(Model.NeedMetByAccommodation == true ? "checked" : String.Empty)><span class="cr"><i class="cr-icon glyphicon glyphicon-ok"></i></span>Accommodation(s), Modification(s), and/or Supplemental Aid</label><br />
                    <label><input type="checkbox" name="MetByOther" @(Model.NeedMetByOther == true ? "checked" : String.Empty)><span class="cr"><i class="cr-icon glyphicon glyphicon-ok"></i></span>Other</label><br />
                </div>
            </div>
            <div class="form-check" id="MeetByOtherTextArea">
                <br />
                <p s class="standard-font-size" tyle="display: @(Model.NeedMetByOther == true ? "block;" : "none;")">
                    *if other, please explain<br />
                    <textarea class="form-control standard-font-size" id="MeetNeedByOtherDescription" name="MeetNeedByOtherDescription" type="text" rows="3" maxlength="2000" data-toggle="tooltip" data-placement="bottom" title="2000 character limit." >@(Model.NeedMetByOtherDescription)</textarea>
                </p>
            </div>
        </fieldset>

        <div class="row">
            <div class="col-md-12" style="text-align:center;">
                <div class="form-group">
                    <button type="reset" class="formbtn btn btn-default btn-lg" data-toggle="tooltip" data-placement="bottom" title="Reset form to initial values."><i class="glyphicon glyphicon-repeat"></i>&nbsp;Reset</button>
                    <button type="submit" class="formbtn btn btn-primary btn-lg"><i class="glyphicon glyphicon-floppy-disk"></i>&nbsp;Save</button>
                    <button type="button" class="formbtn btn btn-secondary btn-lg" data-dismiss="modal"><i class="glyphicon glyphicon-remove-circle"></i>&nbsp;Close</button>
                </div>
            </div>
        </div>


    }

</div>
<br />
<br />

<script>

    // Attach Event
    //reset the form to default database/brand new values.
    $("input[name='ModuleSocialNoConcern']").on('click', function (event) {
        if ($("input[name='ModuleSocialNoConcern']:checked").length) {
            $("input[name='ModuleSocialProgressTowardGenEd']").prop('checked', false);
            $("input[name='ModuleSocialAreaOfNeed']").prop('checked', false);
            $("input[name='ModuleSocialMentalHealthDiagnosis']").prop('checked', false);
            $("input[name='ModuleSocialSignificantBehaviors']").prop('checked', false);
            $("input[name='ModuleSocialDeficit']").prop('checked', false);

            $("input:radio[name=ModuleSocialBehaviorImepedeLearning]").prop('checked', false);
            $("input:radio[name=ModuleSocialBehaviorInterventionPlan]").prop('checked', false);

            $("#MeetNeedByOtherDescription").val('');
            $("input[name=MetByGoal]").prop('checked', false);
            $("input[name=MetByAccommodation]").prop('checked', false);
            $("input[name=MetByOther]").prop('checked', false);
            $("#MeetByOtherTextArea p").hide();
        }
    });

    // Attach Event
    $("input[name='ModuleSocialProgressTowardGenEd']").on('click', function (event) {
        $("input[name='ModuleSocialNoConcern']").prop('checked', false);
    });

    $("input[name='ModuleSocialAreaOfNeed']").on('click', function (event) {
        $("input[name='ModuleSocialNoConcern']").prop('checked', false);
    });

    $("input[name='ModuleSocialMentalHealthDiagnosis']").on('click', function (event) {
        $("input[name='ModuleSocialNoConcern']").prop('checked', false);
    });

    $("input[name='ModuleSocialSignificantBehaviors']").on('click', function (event) {
        $("input[name='ModuleSocialNoConcern']").prop('checked', false);
    });

    $("input[name='ModuleSocialDeficit']").on('click', function (event) {
        $("input[name='ModuleSocialNoConcern']").prop('checked', false);
    });

    // Attach Event
    // if checkbox is selected than show text box.
    $("input:checkbox[name=MetByOther]").on('click', function (event) {
        if ($("input:checkbox[name=MetByOther]").is(':checked')) {
            $("#MeetByOtherTextArea p").show();
        }
        else {
            $("#MeetByOtherTextArea p").hide();
        }
    });

	/* Binding */
	/* tooltips */
	$('[data-toggle="tooltip"]').tooltip({
		trigger: 'manual'
	});

	///* Event */
	///* When a user clicks on the question mark icon we turn on tooltips */
	$('.tooltip-help').on('click', function () {
		$('[data-toggle="tooltip"]').tooltip('toggle');
	});

</script>
